<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @heart do |f| %>
    <div class="field">
        <%= f.label :いまのきもち %>
        <%= f.text_field :body, :size => 30 %>
    </div>

    <div class="field">
        <%= f.label :投稿先  %>
        <%= f.select:genre, 
        [["みんなのつぶやき", "みんなのつぶやき"], 
        ["おすすめの場所", "おすすめの場所"]], include_blank: "選択して下さい" %>
    </div>
    <%= f.submit "投稿する" %>
<% end %>
<%= link_to "一覧に戻る", hearts_path %>
